<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="views.Options" >

    <TextView
        android:id="@+id/clicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/CopyButton"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/DeleteButton"
        android:layout_below="@+id/DeleteButton"
        android:layout_marginTop="16dp"
        android:onClick="Copy"
        android:text="@string/CopyButton"
        android:background="@drawable/buttonshape"
        android:textColor="#40756E"
        android:textSize="30sp" />

    <Button
        android:id="@+id/ArchiveButton"
       	android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/CopyButton"
        android:layout_below="@+id/CopyButton"
        android:layout_marginTop="16dp"
        android:onClick="Archive"
        android:text="@string/ArchiveButton" 
        android:background="@drawable/buttonshape"
        android:textColor="#40756E"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/EmailButton"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/ArchiveButton"
        android:layout_below="@+id/ArchiveButton"
        android:layout_marginTop="16dp"
        android:text="@string/EmailButton"
		android:background="@drawable/buttonshape"
        android:textColor="#40756E"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/CancelButton"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/EmailButton"
        android:layout_alignRight="@+id/EmailButton"
        android:layout_below="@+id/EmailButton"
        android:layout_marginTop="16dp"
        android:background="@drawable/buttonshape"
        android:text="@string/CancelButton"
        android:textColor="#40756E"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/EmailEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/CancelButton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:ems="10"
        android:hint="Enter recipeint" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/EmailEditText"
        android:layout_alignBottom="@+id/EmailEditText"
        android:layout_alignRight="@+id/CancelButton"
        android:layout_toRightOf="@+id/EmailEditText"
        android:background="@drawable/buttonshape"
        android:onClick="addEmail"
        android:text="Add"
        android:textColor="#40756E"
        android:textSize="10sp" />

    <Button
        android:id="@+id/DeleteButton"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/clicked"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonshape"
        android:onClick="Delete"
        android:text="@string/DeleteButton"
        android:textColor="#40756E"
        android:textSize="30sp" />

</RelativeLayout>